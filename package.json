{
  "name": "koa-template",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "dev": "cross-env NODE_ENV=development node index.js",
    "dev:watch": "cross-env NODE_ENV=development nodemon index.js",
    "lint": "eslint app/**/*.js",
    "lint:fix": "eslint --fix app/**/*.js",
    "style": "prettier --write app/**/*.js"
  },
  "lint-staged": {
    "app/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/liuyib/koa-template.git"
  },
  "keywords": [
    "koa"
  ],
  "author": "liuyib <https://github.com/liuyib>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/liuyib/koa-template/issues"
  },
  "homepage": "https://github.com/liuyib/koa-template",
  "dependencies": {
    "axios": "^0.21.1",
    "basic-auth": "^2.0.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-body": "^4.2.0",
    "koa-router": "^10.0.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.20",
    "mariadb": "^2.5.2",
    "module-alias": "^2.2.2",
    "sequelize": "^6.3.5",
    "uid": "^2.0.0",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1"
  },
  "_moduleAliases": {
    "~root": ".",
    "~api": "app/api",
    "~config": "app/config",
    "~lib": "app/lib",
    "~middleware": "app/middleware",
    "~model": "app/model",
    "~service": "app/service",
    "~validator": "app/validator"
  }
}
